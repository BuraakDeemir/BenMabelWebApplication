@using BenMabelProject.Entity.DtoS.Finanss;

@model FinanceDayDto


<div class="col-lg-12 mb-4 order-0">
    <div class="card" style="background-color:#F7F1E5">
        <div class="d-flex align-items-end row">
            <div class="col-sm-12">
                <div class="card-body">


                    <div class="row">
                        <div class="col-lg-4 col-md-12 col-6">
                            <div class="card">
                                <div class="card-body">
                                    <h4>Yeni Sipariş</h4>
                                    <span class="fw-semibold d-block mb-1">Bu Ay</span>
                                    <h3 class="card-title mb-2">@Model.NewOrder</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-12 col-6">
                            <div class="card">
                                <div class="card-body">
                                    <h4>Toplam Satış</h4>
                                    <span class="fw-semibold d-block mb-1">Bu Ay</span>
                                    @{
                                        var y = (Model.TotalPrice).ToString("C0");

                                        <h3 class="card-title mb-2">@y</h3>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-12 col-6">
                            <div class="card">
                                <div class="card-body">
                                    <h4>Toplam Sipariş</h4>
                                    <span class="fw-semibold d-block mb-1">Bu Ay</span>
                                    <h3 class="card-title mb-2">@Model.TotalOrder</h3>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>