@model UserAddDto

<div class="container-xxl flex-grow-1 container-p-y">
    <form asp-controller="User" asp-action="AddUser" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" style="color:red"></div>
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kullanıcı Yönetimi /</span>Kullanıcı Ekle</h4>

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">

                    <div class="card-body">
                        <div>
                            <label asp-for="FirstName" class="form-label">İsim</label>
                            <input asp-for="FirstName" type="text" class="form-control" id="defaultFormControlInput" placeholder="İsim" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">

                    <div class="card-body">
                        <div>
                            <label asp-for="LastName" class="form-label">Soyisim</label>
                            <input asp-for="LastName" type="text" class="form-control" id="defaultFormControlInput" placeholder="Soyisim" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">

                    <div class="card-body">
                        <div>
                            <label asp-for="Password" class="form-label">Şifre</label>
                            <input asp-for="Password" type="password" class="form-control" id="defaultFormControlInput" placeholder="Şifre" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">

                    <div class="card-body">
                        <div>
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" id="defaultFormControlInput" placeholder="Email" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <div>
                            <label asp-for="RoleId" class="form-label">Rol</label>
                            <select asp-for="RoleId" class="form-control" asp-items="@(new SelectList(Model.Roles,"Id","Name"))"></select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <div>
                            <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control" id="defaultFormControlInput" placeholder="Telefon Numarası" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group"><button type="submit" class="btn btn-primary btn-block">Ekle</button> </div>
    </form>
</div>