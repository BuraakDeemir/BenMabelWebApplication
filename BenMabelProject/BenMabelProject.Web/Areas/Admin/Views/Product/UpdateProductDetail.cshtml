@model ProductUpdateDto

<form asp-controller="Product" asp-action="AddProduct" method="post" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div>
                            <input type="hidden" asp-for="Id" />
                            <label class="form-label" asp-for="ProductName">Ürün İsmİ</label>
                            <input type="text"
                                   asp-for="ProductName"
                                   class="form-control"
                                   placeholder="Örn. Çalışma Masası"
                                   aria-describedby="defaultFormControlHelp" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div>
                            <label class="form-label">ÜRÜN KATEGORİSİ</label>
                            <select class="form-select" id="CategoryList" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories,"Id","CategoryName"))" aria-label="Default select example">
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div>
                            <label class="form-label" asp-for="Stock">SATIŞA HAZIR STOK</label>
                            <input class="form-control" asp-for="Stock" type="text"  id="html5-number-input">
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div>
                            <label class="form-label">SATIŞA BAŞLANSIN MI?</label>
                            <div class="col-md">
                                <div class="form-check form-check-inline mt-3">
                                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="Hayır Satışa Başlama">
                                    <label class="form-check-label" for="inlineRadio1">Hayır, Satışa Başlama</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="Evet Satışa Başla">
                                    <label class="form-check-label" for="inlineRadio2">Evet, Satışa Başla</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>


        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div>
                            <label class="form-label" asp-for="ProductPrice.KDV">ÜRÜNE UYGULANACAK KDV ORANI</label>
                            <input class="form-control" type="text" asp-for="ProductPrice.KDV" id="html5-number-input">
                            <span asp-validation-for="ProductPrice.KDV" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div>
                            <label class="form-label" asp-for="ProductPrice.Price">ÜRÜNÜN VERGİSİZ SATIŞ FİYATI </label>
                            <input class="form-control" asp-for="ProductPrice.Price" type="text" id="html5-number-input">
                            <span asp-validation-for="ProductPrice.Price" class="text-danger"></span>
                        </div>
                        <div id="defaultFormControlHelp" class="form-text">
                            Vergi Oranına Göre Son Satış Fiyatı Hesaplanacaktır.
                        </div>
                    </div>
                </div>
            </div>


        </div>



        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <div>
                            <label class="form-label">ÜRÜN AÇIKLAMASI</label>
                            <textarea class="form-control" asp-for="ProductDetail.detail" id="exampleFormControlTextarea1" rows="3" style="height: 193px;"></textarea>
                            <span asp-validation-for="ProductDetail.detail" class="text-danger"></span>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                  
                            <label class="form-label" asp-for="Img1">GÖRSEL - 1</label>
                            <input class="form-control" asp-for="Img1" type="file" id="formFile">
                            <br />
                        <img src="~/images/@Model.ProductImg.Img_1_FileName" width="100%" alt="@Model.ProductName" />
                        
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">

                        <label class="form-label" asp-for="Img2">GÖRSEL - 1</label>
                        <input class="form-control" asp-for="Img2" type="file" id="formFile">
                        <br />
                        <img src="~/images/@Model.ProductImg.Img_2_FileName" width="100%" alt="@Model.ProductName" />

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">

                        <label class="form-label" asp-for="Img3">GÖRSEL - 1</label>
                        <input class="form-control" asp-for="Img3" type="file" id="formFile">
                        <br />
                        <img src="~/images/@Model.ProductImg.Img_3_FileName" width="100%" alt="@Model.ProductName" />

                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">

                        <label class="form-label" asp-for="Img4">GÖRSEL - 1</label>
                        <input class="form-control" asp-for="Img4" type="file" id="formFile">
                        <br />
                        <img src="~/images/@Model.ProductImg.Img_4_FileName" width="100%" alt="@Model.ProductName" />

                    </div>
                </div>
            </div>
        </div>
 
        <div class="row" style="padding-left:20px; padding-right:20px;">
            <button class="btn btn-secondary btn-lg" asp-area="Admin" asp-controller="Product" asp-action="UpdateProductDetail" type="submit">Güncelle</button>
        </div>
    </div>
</form>