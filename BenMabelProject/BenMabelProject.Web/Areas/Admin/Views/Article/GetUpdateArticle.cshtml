@model ArticleUpdateDto
<div class="container-xxl flex-grow-1 container-p-y">
    <form asp-controller="Article" asp-action="GetUpdateArticle" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Makale Yönetimi /</span>Makale Ekle</h4>

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">

                    <div class="card-body">
                        <div>
                            <label asp-for="Title" class="form-label">Başlık</label>
                            <input asp-for="Title" type="text" class="form-control" id="defaultFormControlInput" placeholder="Makale Başlığı" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <div>
                            <label asp-for="SmlContent" class="form-label">Kısa İçerik</label>
                            <textarea asp-for="SmlContent" type="text" rows="13" class="form-control" id="defaultFormControlInput" placeholder="Makale İçeriği" aria-describedby="defaultFormControlHelp"></textarea>
                            <span asp-validation-for="SmlContent" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <div>
                            <label asp-for="Content" class="form-label">İçerik</label>
                            <textarea asp-for="Content" type="text" rows="13" class="form-control" id="defaultFormControlInput" placeholder="Makale İçeriği" aria-describedby="defaultFormControlHelp"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div>
                            <label asp-for="SmlImage" class="form-label">Resim Seçiniz(Küçük Boyut)</label>
                            <input asp-for="SmlImage" type="file" accept="image/*" rows="13" class="form-control" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">
                            <br />
                            <img src="~/images/@Model.Image.Sml_FileName" width="100%" alt="@Model.Title" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <div>
                            <label asp-for="BigImage" class="form-label">Resim Seçiniz(Büyük Boyut)</label>
                            <input asp-for="BigImage" type="file" accept="image/*" rows="13" class="form-control" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">
                            <br />
                            <img src="~/images/@Model.Image.Big_FileName" width="100%" alt="@Model.Title" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </div>


    </form>
</div>