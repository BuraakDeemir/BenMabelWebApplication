@model List<Order>
<div class="card">
    <h5 class="card-header">Kargolananlar</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover" id="ProductsTable">
            <thead>
                <tr>
                    <th>Sipariş Numarası</th>
                    <th>Sipariş Tarihi</th>
                    <th>Toplam Tutar</th>
                    <th>Durum</th>
                    <th>Detay</th>
                    <th>İşlem</th>

                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.Id</strong></td>
                        <td><strong>@item.OrderSituation.OrderDate</strong></td>
                        @{
                            string x = (@item.OrderPrice.TotalPrice).ToString("C0");
                       
                        <td>@x</td>
                        }
                        <td>@item.Stuation</td>
                        <td><a class="btn btn-primary" style="color:white;" asp-controller="Order" asp-action="OrderDetail" asp-route-Id="@item.Id">Detaylar</a></td>
                        <td><a class="btn btn-primary" style="color:white;" asp-controller="Order" asp-action="CargoStageOk" asp-route-Id="@item.Id">Onayla(Teslim Edildi)</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section scripts{
    <script src="~/js/AllProducts.js" type="application/ecmascript"></script>
}
