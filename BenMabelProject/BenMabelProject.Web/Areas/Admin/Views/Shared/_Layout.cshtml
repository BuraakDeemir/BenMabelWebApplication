<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <title>Container - Layouts | Sneat - Bootstrap 5 HTML Admin Template - Pro</title>
    <meta name="description" content="" />
    <link rel="icon" type="image/x-icon" href="~/sneat/assets/img/favicon/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <link href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css" rel="stylesheet" crossorigin="anonymous" />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
          rel="stylesheet" />
    <link rel="stylesheet" href="~/sneat/assets/vendor/fonts/boxicons.css" />
    <link rel="stylesheet" href="~/sneat/assets/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="~/sneat/assets/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="~/sneat/assets/css/demo.css" />
    <link rel="stylesheet" href="~/sneat/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />
    <script src="~/sneat/assets/vendor/js/helpers.js"></script>
    <script src="~/sneat/assets/js/config.js"></script>
</head>
<body>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <aside id="layout-menu" class="layout-menu menu-vertical menu bg-menu-theme">
                <div class="menu-inner-shadow"></div>
                <ul class="menu-inner py-1">
                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">Menü</span>
                    </li>
                    <li class="menu-item">
                        <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-home-circle"></i>
                            <div data-i18n="Analytics">Anasayfa</div>
                        </a>
                    </li>
                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">Sipariş Yönetimi</span>
                    </li>
                    <li class="menu-item">
                        <a asp-area="Admin" asp-controller="Order" asp-action="NewOrder" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-collection"></i>
                            <div data-i18n="Account">Yeni Siparişler</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a asp-area="Admin" asp-controller="Order" asp-action="PreparationStage" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-collection"></i>
                            <div data-i18n="Notifications">Hazırlanan Siparişler</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a asp-area="Admin" asp-controller="Order" asp-action="CargoStage" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-collection"></i>
                            <div data-i18n="Connections">Kargo İşlemleri</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a asp-area="Admin" asp-controller="Order" asp-action="Deliveried" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-collection"></i>
                            <div data-i18n="Connections">Teslim Edilenler</div>
                        </a>
                    </li>
                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">Ürün Yönetimi</span>
                    </li>
                    <li class="menu-item">
                        <a asp-area="Admin" asp-controller="Product" asp-action="AllProduct" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-collection"></i>
                            <div data-i18n="Account">Tüm Ürünler</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a asp-area="Admin" asp-controller="Product" asp-action="AddProduct" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-collection"></i>
                            <div data-i18n="Account">Ürün Ekle</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a asp-area="Admin" asp-controller="Product" asp-action="UpdateProduct" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-collection"></i>
                            <div data-i18n="Account">Ürün Güncelle</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a asp-area="Admin" asp-controller="Product" asp-action="RemoveProductFormSaleList" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-collection"></i>
                            <div data-i18n="Account">Satıştan Kaldır</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a asp-area="Admin" asp-controller="Product" asp-action="ActiveProductFormSaleList" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-collection"></i>
                            <div data-i18n="Account">Tekrar Sat</div>
                        </a>
                    </li>



                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">Kullanıcı Yönetimi</span>
                    </li>
                    <li class="menu-item">
                        <a asp-area="Admin" asp-controller="User" asp-action="AllUser" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-collection"></i>
                            <div data-i18n="Account">Tüm Kullanıcılar</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a asp-area="Admin" asp-controller="User" asp-action="AddUser" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-collection"></i>
                            <div data-i18n="Account">Kullanıcı ekle</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a asp-area="Admin" asp-controller="User" asp-action="RemoveUser" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-collection"></i>
                            <div data-i18n="Account">Kullanıcı Sil</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a asp-area="Admin" asp-controller="User" asp-action="AuthorizationUser" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-collection"></i>
                            <div data-i18n="Account">Yetkilendirme</div>
                        </a>
                    </li>

                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">Makale Yönetimi</span>
                    </li>
                    <li class="menu-item">
                        <a asp-area="Admin" asp-controller="Article" asp-action="AddArticle" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-collection"></i>
                            <div data-i18n="Account">Yeni Makale</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a asp-area="Admin" asp-controller="Article" asp-action="ShowAllArticle" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-collection"></i>
                            <div data-i18n="Account">Makale Güncelle</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a asp-area="Admin" asp-controller="Article" asp-action="ShowActiveArticle" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-collection"></i>
                            <div data-i18n="Account">Aktif Makaleler</div>
                        </a>
                    </li>
                    <li class="menu-item">
                        <a asp-area="Admin" asp-controller="Article" asp-action="ShowInActiveArticle" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-collection"></i>
                            <div data-i18n="Account">İnaktif Makaleler</div>
                        </a>
                    </li>
                    <li class="menu-header small text-uppercase">
                        <span class="menu-header-text">Çıkış</span>
                    </li>
                    <li class="menu-item">
                        <a asp-area="Admin" asp-controller="Auth" asp-action="Logout" class="menu-link">
                            <i class="menu-icon tf-icons bx bx-collection"></i>
                            <div data-i18n="Account">Çıkış Yap</div>
                        </a>
                    </li>
                </ul>
                <br />
                <br />
                <br />
                <br />
            </aside>
            <div class="layout-page">
                <div class="content-wrapper">
                    <div class="container-xxl flex-grow-1 container-p-y">
                        <div>
                            @RenderBody()
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="layout-overlay layout-menu-toggle"></div>
    <script src="~/sneat/assets/vendor/libs/jquery/jquery.js"></script>
    <script src="~/sneat/assets/vendor/libs/popper/popper.js"></script>
    <script src="~/sneat/assets/vendor/js/bootstrap.js"></script>
    <script src="~/sneat/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js" crossorigin="anonymous"> </script>
    <script src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"> </script>
    <script src="https://cdn.datatables.net/buttons/1.6.3/js/dataTables.buttons.min.js" crossorigin="anonymous"> </script>
    <script src="~/sneat/assets/vendor/js/menu.js"></script>
    <script src="~/sneat/assets/js/main.js"></script>
    @await RenderSectionAsync("scripts", false)
    @await Component.InvokeAsync("NToastNotify")
    <script async defer src="https://buttons.github.io/buttons.js"></script>
</body>
</html>
